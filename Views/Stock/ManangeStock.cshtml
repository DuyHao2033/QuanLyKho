@model StockDTO
@{
    Layout = "_AdminLayout";
}

<div class="card shadow-sm p-4" style="max-width: 500px;">
    <h2 class="fw-bold mb-3">Manage Stock</h2>

    <a asp-action="Index" asp-controller="Stock" class="btn btn-secondary mb-3">
        <i class="bi bi-arrow-left"></i> Back
    </a>

    <form asp-action="ManangeStock" method="post">
        <input type="hidden" asp-for="BookId" />

        <div class="mb-3">
            <label class="form-label fw-semibold">Quantity</label>
            <input type="number" class="form-control" asp-for="Quantity" min="0" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">
            <i class="bi bi-save"></i> Update
        </button>
    </form>
</div>
