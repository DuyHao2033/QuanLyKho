<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin - Dashboard</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
          rel="stylesheet" />

    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />

    <!-- CUSTOM ADMIN CSS -->
    <style>
        body {
            margin: 0;
            font-family: "Segoe UI", sans-serif;
            background: #f5f6fa;
        }

        .main-container {
            display: flex;
            min-height: 100vh;
        }

        /* SIDENAV */
        .sidenav {
            width: 240px;
            background: #1e1e2d;
            color: white;
            padding: 20px 0;
            flex-shrink: 0;
        }

            .sidenav .navigation-link {
                display: block;
                padding: 12px 20px;
                color: #dcdcdc;
                font-size: 15px;
                text-decoration: none;
                transition: 0.2s;
            }

                .sidenav .navigation-link:hover {
                    background: #34344a;
                    color: white;
                }

                .sidenav .navigation-link i {
                    margin-right: 10px;
                    font-size: 18px;
                }

        /* Active Menu */
        .navigation-link.active {
            background: #34344a;
            color: white !important;
        }

        /* RIGHT PANEL */
        .right-panel {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
        }

        .nav-bar {
            background: #ffffff;
            padding: 12px 25px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 1px solid #e1e1e1;
        }

        .nav-heading {
            font-size: 18px;
            font-weight: bold;
        }

        .nav-actions {
            display: flex;
            gap: 20px;
            align-items: center;
        }

            .nav-actions .navigation-link {
                color: #333;
                text-decoration: none;
            }

                .nav-actions .navigation-link:hover {
                    color: #0d6efd;
                }

        /* CONTENT AREA */
        .content {
            padding: 25px;
        }
    </style>
</head>

<body>
    <div class="main-container">

        <!-- LEFT MENU -->
        <div class="sidenav">
            <a class="navigation-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")"
               href="/Home/Index">
                <i class="bi bi-house-door"></i> Home
            </a>

            <a href="/AdminOperations/AllOrders"
               class="navigation-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminOperations" ? "active" : "")">
                <i class="bi bi-receipt"></i> Orders
            </a>

            <a href="/Stock/Index"
               class="navigation-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Stock" ? "active" : "")">
                <i class="bi bi-archive"></i> Stock
            </a>

            <a href="/Genre/Index"
               class="navigation-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Genre" ? "active" : "")">
                <i class="bi bi-collection"></i> Genre
            </a>

            <a href="/Book/Index"
               class="navigation-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Book" ? "active" : "")">
                <i class="bi bi-book"></i> Books
            </a>

            <a href="/Reports/TopFiveSellingBooks"
               class="navigation-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Reports" ? "active" : "")">
                <i class="bi bi-bar-chart"></i> Top Selling Items
            </a>
        </div>

        <!-- RIGHT CONTENT -->
        <div class="right-panel">

            <nav class="nav-bar">
                <div class="nav-heading">
                    Welcome @User.Identity?.Name
                </div>

                <div class="nav-actions">
                    <a href="/Identity/Account/Manage/Index" class="navigation-link">
                        <i class="bi bi-gear"></i> Manage account
                    </a>

                    <!-- LOGOUT -->
                    <form asp-area="Identity" asp-page="/Account/Logout"
                          asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button type="submit"
                                class="navigation-link"
                                style="background:none; border:none; padding:0; cursor:pointer;">
                            <i class="bi bi-box-arrow-left"></i> Logout
                        </button>
                    </form>
                </div>
            </nav>

            <div class="content">
                <div class="my-2">
                    <partial name="_Notifications" />
                </div>

                @RenderBody()
            </div>

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
