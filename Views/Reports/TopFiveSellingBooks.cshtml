@model TopNSoldBooksVm
@{
    Layout = "_AdminLayout";
}

<h2 class="fw-bold mb-3">📊 Top Selling Books</h2>

@if (Model != null)
{
    <div class="card p-4 shadow-sm">

        <!-- Filter -->
        <form asp-action="TopFiveSellingBooks" method="get" class="row g-3 mb-4">

            <div class="col-md-3">
                <label class="form-label fw-semibold">Start Date</label>
                <input type="date" name="sDate" class="form-control" />
            </div>

            <div class="col-md-3">
                <label class="form-label fw-semibold">End Date</label>
                <input type="date" name="eDate" class="form-control" />
            </div>

            <div class="col-md-3 d-flex align-items-end gap-2">
                <button class="btn btn-primary w-100">
                    <i class="bi bi-funnel"></i> Filter
                </button>
                <a href="/Reports/TopFiveSellingBooks" class="btn btn-secondary w-100">
                    <i class="bi bi-x-circle"></i> Clear
                </a>
            </div>

        </form>

        <!-- Result Info -->
        <h5 class="mb-3">
            Showing results from
            <span class="text-primary fw-bold">@Model.StartDate.ToString("dd-MMM-yyyy")</span>
            to
            <span class="text-primary fw-bold">@Model.EndDate.ToString("dd-MMM-yyyy")</span>
        </h5>

        <!-- No results -->
        @if (!Model.TopNSoldBooks.Any())
        {
            <div class="alert alert-warning mt-3">
                <i class="bi bi-exclamation-triangle"></i> No records found.
            </div>
        }
        else
        {
            <!-- Table -->
            <table class="table table-hover table-striped" style="max-width: 600px;">
                <thead class="table-primary">
                    <tr>
                        <th>Book</th>
                        <th>Sold Units</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model.TopNSoldBooks)
                    {
                        <tr>
                            <td>
                                <strong>@item.BookName</strong><br />
                                <span class="text-muted">by @item.AuthorName</span>
                            </td>
                            <td class="fw-bold">@item.TotalUnitSold</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
}
else
{
    <div class="alert alert-danger mt-3">
        Something went wrong!
    </div>
}
