@model QUANLYKHO.Models.ViewModel.RegisterViewModel
@{
    ViewData["Title"] = "Đăng ký tài khoản CMS";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 85vh;">
    <div class="card shadow-lg p-4" style="width: 100%; max-width: 420px; border-radius: 18px;">
        <div class="text-center mb-3">
            <h2 class="fw-bold" style="color:#0d6efd;">Tạo tài khoản mới</h2>
            <p class="text-muted">Vui lòng nhập thông tin bên dưới</p>
        </div>

        <form asp-controller="Account" asp-action="Register" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger mb-2"></div>

            <!-- Email -->
            <div class="mb-3">
                <label class="form-label fw-semibold">Email</label>
                <input type="email" asp-for="Email" class="form-control form-control-lg" placeholder="Nhập email của bạn">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Password -->
            <div class="mb-3">
                <label class="form-label fw-semibold">Mật khẩu</label>
                <input type="password" asp-for="Password" class="form-control form-control-lg" placeholder="Nhập mật khẩu">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary btn-lg w-100 mt-2" style="border-radius: 10px;">
                Đăng ký
            </button>
        </form>

        <div class="text-center mt-3">
            <p class="text-muted">
                Đã có tài khoản?
                <a asp-controller="Account" asp-action="Login" class="text-primary fw-semibold">Đăng nhập</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
