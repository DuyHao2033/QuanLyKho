@model QUANLYKHO.Models.ViewModel.LoginViewModel
@{
    ViewData["Title"] = "Đăng nhập tài khoản";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 85vh;">
    <div class="card shadow-lg p-4" style="width: 100%; max-width: 420px; border-radius: 18px;">

        <div class="text-center mb-3">
            <h2 class="fw-bold" style="color:#0d6efd;">Đăng nhập</h2>
            <p class="text-muted">Vui lòng nhập thông tin của bạn</p>
        </div>

        <form method="post" asp-controller="Account" asp-action="Login">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="All" class="text-danger mb-2"></div>

            <!-- Email -->
            <div class="mb-3">
                <label class="form-label fw-semibold">Email</label>
                <input type="email" asp-for="Email" class="form-control form-control-lg" placeholder="Nhập email của bạn">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Password -->
            <div class="mb-3">
                <label class="form-label fw-semibold">Mật khẩu</label>
                <input type="password" asp-for="Password" class="form-control form-control-lg" placeholder="Nhập mật khẩu">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <!-- Remember me -->
            <div class="form-check mb-3">
                <input type="checkbox" asp-for="RememberMe" class="form-check-input" id="rememberCheck">
                <label class="form-check-label" for="rememberCheck">Ghi nhớ đăng nhập</label>
            </div>

            <!-- Submit -->
            <button type="submit" class="btn btn-primary btn-lg w-100 mt-2" style="border-radius: 10px;">
                Đăng nhập
            </button>
        </form>

        <div class="text-center mt-3">
            <p class="text-muted">
                Chưa có tài khoản?
                <a asp-controller="Account" asp-action="Register" class="text-primary fw-semibold">Đăng ký ngay</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
