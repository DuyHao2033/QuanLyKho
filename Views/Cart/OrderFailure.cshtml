@{
    ViewData["Title"] = "Order Failure";
    Layout = "_Layout"; // dùng layout chính
}

<div class="container my-5">
    <div class="order-failure-wrapper shadow-lg p-4 rounded-4 text-center">
        <div class="mb-3">
            <i class="bi bi-x-circle text-danger" style="font-size: 3rem;"></i>
        </div>
        <h2 class="fw-bold text-danger mb-3">Order Failed</h2>
        <p class="text-muted mb-4">
            Sorry, your order could not be processed at this time.<br />
            Please try again later or contact support if the issue persists.
        </p>

        <div class="d-flex justify-content-center gap-3">
            <a href="/Cart/Checkout" class="btn btn-primary">
                <i class="bi bi-arrow-repeat"></i> Try Again
            </a>
            <a href="/Home/Index" class="btn btn-secondary">
                <i class="bi bi-house-door"></i> Back to Home
            </a>
        </div>
    </div>
</div>

<style>
    .order-failure-wrapper {
        background-color: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(10px);
        max-width: 600px;
        margin: auto;
    }

    .dark-mode .order-failure-wrapper {
        background-color: rgba(30, 41, 59, 0.85);
        color: #e2e8f0;
    }
</style>


