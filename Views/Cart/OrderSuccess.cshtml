@{
    ViewData["Title"] = "Order Success";
    Layout = "_Layout"; // dùng layout chính
}

<div class="container my-5">
    <div class="order-success-wrapper shadow-lg p-4 rounded-4 text-center">
        <div class="mb-3">
            <i class="bi bi-check-circle text-success" style="font-size: 3rem;"></i>
        </div>
        <h2 class="fw-bold text-success mb-3">Order Successful</h2>
        <p class="text-muted mb-4">
            Thank you for your purchase!<br />
            Your order has been placed successfully and will be processed soon.
        </p>

        <div class="d-flex justify-content-center gap-3">
            <a href="/Home/Index" class="btn btn-primary">
                <i class="bi bi-house-door"></i> Back to Home
            </a>
            <a href="/Orders/MyOrders" class="btn btn-secondary">
                <i class="bi bi-list-check"></i> View My Orders
            </a>
        </div>
    </div>
</div>

<style>
    .order-success-wrapper {
        background-color: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(10px);
        max-width: 600px;
        margin: auto;
    }

    .dark-mode .order-success-wrapper {
        background-color: rgba(30, 41, 59, 0.85);
        color: #e2e8f0;
    }
</style>

