@model BookShoppingCartMvcUI.Models.ShoppingCart
@{
    ViewData["Title"] = "My Cart";
}

<div class="container my-5">
    <div class="cart-wrapper shadow-lg p-4 rounded-4">
        <h3 class="mb-4 fw-bold text-center">🛒 My Cart</h3>

        @if (Model != null && Model.CartDetails != null && Model.CartDetails.Count > 0)
        {
            <div class="table-responsive">
                <table class="table table-bordered align-middle">
                    <thead class="table-dark text-center">
                        <tr>
                            <th>Book</th>
                            <th>Genre</th>
                            <th>Unit Price (VND)</th>
                            <th>Total Price (VND)</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.CartDetails)
                        {
                            <tr>
                                <td>@item.Book.BookName</td>
                                <td>@item.Book.Genre.GenreName</td>
                                <td>@string.Format("{0:N0}₫", item.UnitPrice) x @item.Quantity</td>
                                <td>@string.Format("{0:N0}₫", item.UnitPrice * item.Quantity)</td>
                                <td class="text-center">
                                    <div class="d-flex justify-content-center gap-2">
                                        @if (item.Quantity < item.Book.Stock.Quantity)
                                        {
                                            <a class="btn btn-sm btn-success" href="/Cart/AddItem?bookId=@item.BookId&redirect=1">+</a>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Out of stock</span>
                                        }
                                        <a class="btn btn-sm btn-danger" href="/Cart/RemoveItem?bookId=@item.BookId">-</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="d-flex justify-content-between align-items-center mt-4">
                <h5 class="fw-bold">
                    Total: @string.Format("{0:N0}₫", Model.CartDetails.Sum(x => x.UnitPrice * x.Quantity))
                </h5>
                <a class="btn btn-primary btn-lg" href="/Cart/Checkout">Checkout</a>
            </div>
        }
        else
        {
            <div class="alert alert-info text-center">
                Your cart is empty.
            </div>
        }
    </div>
</div>

<style>
    .cart-wrapper {
        background-color: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(10px);
        transition: background-color 0.3s, color 0.3s;
    }

    .dark-mode .cart-wrapper {
        background-color: rgba(30, 41, 59, 0.85);
        color: #e2e8f0;
    }
</style>
