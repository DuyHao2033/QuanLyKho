@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "_Layout"; // Hoặc "_AdminLayout" nếu muốn đồng bộ admin
}

<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card shadow-lg p-4" style="max-width: 450px; width:100%; border-radius: 15px;">
        <div class="text-center mb-4">
            <img src="/images/logo.png" alt="Logo" width="60" class="mb-2" />
            <h2 class="fw-bold">EBookStore</h2>
            <p class="text-muted">Login to your account</p>
        </div>

        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" placeholder="name@example.com" autocomplete="username" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Password" type="password" class="form-control" placeholder="Password" autocomplete="current-password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input class="form-check-input" asp-for="Input.RememberMe" />
                <label class="form-check-label" asp-for="Input.RememberMe">
                    Remember me
                </label>
            </div>

            <button id="login-submit" type="submit" class="btn btn-primary w-100 py-2 mb-3 fw-bold" style="font-size:16px;">Log in</button>

            <div class="d-flex justify-content-between small">
                <a asp-page="./ForgotPassword">Forgot your password?</a>
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register</a>
            </div>

            @if ((Model.ExternalLogins?.Count ?? 0) > 0)
            {
                <hr class="my-4">
                <p class="text-center text-muted mb-3">Or login with</p>
                <div class="d-flex justify-content-center gap-2 flex-wrap">
                    @foreach (var provider in Model.ExternalLogins!)
                    {
                        <form method="post" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl">
                            <button type="submit" class="btn btn-outline-primary w-100" name="provider" value="@provider.Name">
                                @provider.DisplayName
                            </button>
                        </form>
                    }
                </div>
            }
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
