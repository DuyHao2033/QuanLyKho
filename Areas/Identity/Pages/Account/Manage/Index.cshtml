@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="container my-5">
    <div class="profile-wrapper shadow-lg p-4 rounded-4" style="max-width:600px; margin:auto;">
        <h3 class="fw-bold text-center mb-4">@ViewData["Title"]</h3>

        <partial name="_StatusMessage" for="StatusMessage" />

        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

            <!-- Username (disabled) -->
            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control" placeholder="Your username" disabled />
                <label asp-for="Username" class="form-label"></label>
            </div>

            <!-- Phone Number -->
            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Enter your phone number" />
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <!-- Save button -->
            <div class="d-grid mt-4">
                <button id="update-profile-button" type="submit" class="btn btn-primary btn-lg fw-bold">
                    <i class="bi bi-save me-1"></i> Save Changes
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .profile-wrapper {
        background-color: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(10px);
    }

    .dark-mode .profile-wrapper {
        background-color: rgba(30, 41, 59, 0.85);
        color: #e2e8f0;
    }
</style>
